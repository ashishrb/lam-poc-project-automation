# Project Portfolio Management System - Environment Configuration

# Application Settings
APP_NAME=Project Portfolio Management System
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql+psycopg://app:app@localhost:5432/app

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Chroma Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Ollama AI Models
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_REASONER_MODEL=gpt-oss:20b
OLLAMA_EMBED_MODEL=nomic-embed-text:v1.5

# xLAM Model
XLAM_MODEL_ID=Salesforce/Llama-xLAM-2-8b-fc-r

# JWT and Security
JWT_SECRET=change-me-to-a-secure-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECRET_KEY=change-me-to-a-secure-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Tenant Configuration
TENANT_DEFAULT=demo

# File Storage
FILE_STORAGE_ROOT=./storage
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.md,.json,.csv

# Timezone
TIMEZONE=Asia/Kolkata

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIEVAL_RESULTS=10

# AI Settings
MAX_TOKENS=4000
TEMPERATURE=0.7

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

